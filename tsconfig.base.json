{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@vitejs/devtools-kit/client": ["./packages/kit/src/client/index"],
      "@vitejs/devtools-kit": ["./packages/kit/src/index"],
      "@vitejs/devtools-vite": ["./packages/vite/src/index"],
      "@vitejs/devtools": ["./packages/core/src/index"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "isolatedDeclarations": false,
    "skipLibCheck": true
  }
}
